<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/backgroundLight">

    <!-- Ana içerik -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Üst bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@color/colorPrimary"
            android:elevation="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/employer_list"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/buttonText"
                android:fontFamily="sans-serif-medium" />

            <ImageButton
                android:id="@+id/menuButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_more"
                android:contentDescription="@string/menu_button_description"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                app:tint="@color/buttonText" />
        </LinearLayout>

        <!-- Liste Alanı -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:overScrollMode="never"
            android:importantForAccessibility="no">


        <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:dividerPadding="8dp" />
        </ScrollView>

        <!-- Alt Menü (Bottom Navigation) -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardBackground"
            app:itemIconTint="@color/colorPrimary"
            app:itemTextColor="@color/colorPrimary"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav_menu"
            android:elevation="8dp" />
    </LinearLayout>

    <!-- Sağdan açılan Menü -->
    <LinearLayout
        android:id="@+id/drawerMenu"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/cardBackground"
        android:elevation="6dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:text="Menu"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/menuAddExpense"
            style="@style/RoundedButton"
            android:text="Add Expense" />

        <Button
            android:id="@+id/menuAddEmployer"
            style="@style/RoundedButton"
            android:text="Add Employer" />

        <Button
            android:id="@+id/openCalculatorButton"
            style="@style/RoundedButton"
            android:onClick="openCalculator"
            android:text="Calculator" />

        <Button
            android:id="@+id/menuCalendar"
            style="@style/RoundedButton"
            android:text="Calendar" />

        <Button
            android:id="@+id/menuIncomplete"
            style="@style/RoundedButton"
            android:layout_marginTop="8dp"
            android:text="Incomplete Jobs" />

        <Button
            android:id="@+id/menuHistory"
            style="@style/RoundedButton"
            android:text="History" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor" />


        <!-- TOTAL alanı -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/menuTotalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="TOTAL"
                android:textColor="@color/textSecondary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/menuTotalValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₺ 0.00"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
